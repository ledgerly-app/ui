{
    "name": "ledgerly-app/ui",
    "description": "Blade-based UI for Ledgerly audit timelines",
    "type": "library",
    "license": "MIT",
    "keywords": [],
    "homepage": "https://github.com/ledgerly-app/core",
    "authors": [
        {
            "name": "Vasileios Ntoufoudis",
            "email": "info@ntoufoudis.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "ledgerly-app/core": "^0.1 || ^0.4"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0|^4.0",
        "pestphp/pest-plugin-laravel": "^3.0|^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "spatie/pest-plugin-snapshots": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Ledgerly\\UI\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ledgerly\\UI\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare",
            "@composer run prepare"
        ],
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse --memory-limit=2G",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ledgerly\\UI\\LedgerlyUIServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    }
}
